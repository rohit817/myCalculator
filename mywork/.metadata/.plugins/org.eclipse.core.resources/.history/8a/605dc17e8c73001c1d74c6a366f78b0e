

//concat()// toUpperCase()//toLowerCase()//substring()
//				reverse()// indexOf()//lastindexOf()//charAt()
//				toCharArray() // split()// trim()// startsWith()//
//				endsWith()// toString()//
//			boolean	<--equals()//equalsIgnoreCase()--> equals the object both 




import java.util.*;
public class StringDemo {

	public static void main(String[] args) {
		String str = " Hello";
		String str2 = " Apisero! ";
		StringBuilder sb = new StringBuilder();
		sb = sb.append(str + str2);
		System.out.println("Concatination--> "+str.concat(str2));
		System.out.println("Lower_Case--> "+ str.toLowerCase());
		System.out.println("Upper_Case--> "+ str.toUpperCase());
		System.out.println("Reverse-->" + sb.reverse());//StringBUilder
		System.out.println(str2.substring(2,7));
		System.out.println(str2.lastIndexOf("ero"));
		System.out.println(str2.indexOf("ero"));
		System.out.println(str2.charAt(2));
		System.out.println(str.startsWith(" Hel"));   
		System.out.println(str2.startsWith("Aa")); 
		
		System.out.println(sb.toString());
		char[] ch = new char[35];
		ch = str.toCharArray();
		System.out.println(ch[3]);
		
		String[] str3 = new String[5];
		str3 = sb.toString().split("\\s");
		System.out.println(str3[3]);

	}

}
